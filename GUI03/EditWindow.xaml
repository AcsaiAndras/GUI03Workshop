<Window x:Class="GUI03.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI03"
        mc:Ignorable="d"
        Title="EditWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Grid.Column="0" DataContext="{Binding ElementName=lbox, Path=SelectedItem}">
            <Label Content="Strength" Background="LightBlue" Padding="10" />
            <TextBox Text="{Binding Strength, UpdateSourceTrigger=PropertyChanged}" Padding="10" />
            <Label Content="Vitality" Background="LightBlue" Padding="10" />
            <TextBox Text="{Binding Vitality, UpdateSourceTrigger=PropertyChanged}" Padding="10" />
            <Label Content="Cost" Background="LightBlue" Padding="10" />
            <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" Padding="10" />
            
            <Button Content="Save!" Padding="10" Click="Button_Click" />
            
        </StackPanel>
    </Grid>
</Window>
